<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.university.auctionsystem.client.controllers.SellerDashboardController"
      styleClass="root" stylesheets="@/css/styles.css">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <TabPane VBox.vgrow="ALWAYS">
        <Tab text="Manage Items &amp; Create Auction">
            <content>
                <VBox spacing="10" style="-fx-padding: 10;">
                    <Text text="My Listed Items (Not in Auction)" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                    <ListView fx:id="myItemsListView" VBox.vgrow="SOMETIMES" prefHeight="150"/>
                    <Button text="List New Item" onAction="#handleListItemAction"/>

                    <Text text="Create Auction for Item" style="-fx-font-size: 16px; -fx-font-weight: bold; margin-top: 20px;"/>
                    <GridPane hgap="10" vgap="5">
                        <Label text="Item to Auction:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="itemToAuctionComboBox" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="200"/>

                        <Label text="Start Price ($):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="startPriceField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Reserve Price ($):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="reservePriceField" GridPane.rowIndex="2" GridPane.columnIndex="1" promptText="Optional"/>

                        <Label text="Start Date/Time:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <DatePicker fx:id="startDatePicker" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                        <TextField fx:id="startTimeField" promptText="HH:MM (24h)" GridPane.rowIndex="3" GridPane.columnIndex="2" maxWidth="80"/>

                        <Label text="End Date/Time:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <DatePicker fx:id="endDatePicker" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                        <TextField fx:id="endTimeField" promptText="HH:MM (24h)" GridPane.rowIndex="4" GridPane.columnIndex="2" maxWidth="80"/>

                        <Button text="Create Auction" onAction="#handleCreateAuctionAction" GridPane.rowIndex="5" GridPane.columnIndex="1" style="-fx-margin-top: 10;"/>
                    </GridPane>
                    <Label fx:id="auctionStatusLabel" styleClass="error-label"/>
                </VBox>
            </content>
        </Tab>
        <Tab text="My Created Auctions">
            <content>
                <VBox spacing="10" style="-fx-padding: 10;">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Text text="Overview of My Auctions" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                        <Button text="Refresh Auctions" onAction="#handleRefreshMyCreatedAuctions"/>
                    </HBox>
                    <TableView fx:id="myAuctionsTableView" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="myItemNameCol" text="Item Name" prefWidth="200"/>

                            <!---->
                            <TableColumn fx:id="myAuctionStatusCol" text="Auction Status" prefWidth="200"/>
                            <TableColumn fx:id="myAuctionPaymentStatusCol" text="Payment Status" prefWidth="200"/>

                            <!---->
                            <TableColumn fx:id="myAuctionCurrentBidCol" text="Final Bid" prefWidth="200"/>
                            <TableColumn fx:id="myAuctionWinnerCol" text="Winner ID" prefWidth="80"/>

                            <!---->
                            <TableColumn fx:id="myAuctionActionCol" text="Action" prefWidth="100" minWidth="100" maxWidth="200"/>

                            <!---->
                            <TableColumn fx:id="myAuctionEndTimeCol" text="Ends At" prefWidth="170"/>
                        </columns>

                        <!---->
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </VBox>
            </content>
        </Tab>
    </TabPane>
</VBox>