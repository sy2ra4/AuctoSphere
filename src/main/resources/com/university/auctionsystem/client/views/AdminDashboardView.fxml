<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox spacing="15" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.university.auctionsystem.client.controllers.AdminDashboardController"
      styleClass="root" stylesheets="@/css/styles.css">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Text text="Admin Panel" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Button text="Refresh Data" onAction="#handleRefreshAdminData"/>
    </HBox>

    <TabPane VBox.vgrow="ALWAYS">
        <Tab text="User Management">
            <content>
                <VBox spacing="5">
                    <Label text="All Users:" style="-fx-font-weight: bold;"/>
                    <TableView fx:id="usersTableView" VBox.vgrow="ALWAYS">
                        <columns>
                            <!---->
                            <TableColumn fx:id="userIdCol" text="ID" prefWidth="60" minWidth="60" maxWidth="60"/>

                            <!---->
                            <TableColumn fx:id="usernameCol" text="Username" prefWidth="150"/>
                            <TableColumn fx:id="emailCol" text="Email" prefWidth="250"/>
                            <TableColumn fx:id="roleCol" text="Role" prefWidth="100"/>

                            <!---->
                            <TableColumn fx:id="createdAtCol" text="Registered" prefWidth="170"/>

                            <!---->
                            <TableColumn fx:id="userActionCol" text="Action" prefWidth="75" minWidth="75" maxWidth="75"/>
                        </columns>
                        <!---->
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </VBox>
            </content>
        </Tab>
        <Tab text="Auction Management">
            <content>
                <VBox spacing="5">
                    <Label text="All Auctions:" style="-fx-font-weight: bold;"/>
                    <TableView fx:id="auctionsTableView" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="auctionIdCol" text="Auction ID" prefWidth="200"/>
                            <TableColumn fx:id="auctionItemNameCol" text="Item Name" prefWidth="200"/>
                            <TableColumn fx:id="auctionStatusCol" text="Status" prefWidth="200"/>
                            <TableColumn fx:id="auctionStartTimeCol" text="Start Time" prefWidth="200"/>
                            <TableColumn fx:id="auctionEndTimeCol" text="End Time" prefWidth="200"/>
                            <TableColumn fx:id="auctionCurrentBidCol" text="Current Bid" prefWidth="200"/>
                            <TableColumn fx:id="auctionPaymentStatusCol" text="Payment" prefWidth="200"/>
                            <TableColumn fx:id="auctionActionCol" text="Action" prefWidth="150"/>
                        </columns>
                    </TableView>
                </VBox>
            </content>
        </Tab>
    </TabPane>
</VBox>