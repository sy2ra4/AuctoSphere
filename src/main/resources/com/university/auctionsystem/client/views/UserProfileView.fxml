<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox spacing="15" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.university.auctionsystem.client.controllers.UserProfileController"
      styleClass="root" stylesheets="@/css/styles.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Text text="My Profile" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label fx:id="usernameLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="250"/>

        <Label text="Role:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Label fx:id="roleLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Member Since:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <Label fx:id="memberSinceLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <Button text="Update Email" onAction="#handleUpdateEmailAction"/>
    <Label fx:id="statusLabel" styleClass="error-label"/>

    <!---->
</VBox>